@using System.Reflection
@using ESE.SmartHome
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />
    <title>@ViewData["Title"] | ESE SmartHome</title>

    <link href="~/css/vendor/bootstrap.css" rel="stylesheet" />
    <link href="~/css/vendor/bootstrap-datepicker.css" rel="stylesheet" />
    <link href="~/css/vendor/font-awesome.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,400i,700&amp;subset=latin-ext" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" />

    @RenderSection("styles", false)
</head>
<body>

    @* left menu *@

    <nav class="sidebar bg-dark">
        <div style="background: #2c3035; height: 70px;" class="d-flex justify-content-center align-items-center">
            <div style="width: 40px; margin-left: -0.4rem;">
                <img class="img-fluid" src="/img/fh_logo_300x160.png" alt="FH Logo" />
            </div>
            <div style="font-size: 1.4rem; padding-left: 0.4rem; color: #d6d6d6;">SmartHome</div>
        </div>

        <nav class="nav flex-column">
            <a class="nav-link" asp-controller="Home" asp-action="Index">
                <i class="fa fa-fw fa-home"></i>Home
            </a>
            <a class="nav-link" asp-controller="Dashboard" asp-action="ViewDashboard">
                <i class="fa fa-fw fa-calendar"></i>Dashboard
            </a>
            <a class="nav-link" asp-controller="RealtimeChart" asp-action="Index">
                <i class="fa fa-fw fa-area-chart"></i>Echtzeitdaten
            </a>
            <a class="nav-link" asp-controller="Home" asp-action="Index">
                <i class="fa fa-fw fa-cogs"></i>Settings
            </a>
        </nav>

        @{
            var version = typeof(Startup).Assembly
                                         .GetCustomAttribute<AssemblyInformationalVersionAttribute>()
                                         .InformationalVersion;
        }
        <span id="version">V@(version)</span>
    </nav>
    <div class="page">
        <div class="container" style="padding-top: 110px;">
            @RenderBody()
        </div>
    </div>


    <script src="~/js/vendor/jquery.js"></script>
    <script src="~/js/vendor/jquery.validate.js"></script>
    <script src="~/js/vendor/jquery.validate.unobtrusive.js"></script>
    <script src="~/js/vendor/popper.js"></script>
    <script src="~/js/vendor/bootstrap.js"></script>
    <script src="~/js/vendor/bootstrap-datepicker.js"></script>
    <script src="~/js/vendor/bootstrap-datepicker.de.min.js"></script>
    <script src="~/js/vendor/Chart.bundle.min.js"></script>
    <script src="~/js/vendor/signalr-client-1.0.0-alpha2-final.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
